<div class="row">
  <div class="col-md-6">
    <h2> <%= t("views.devise.registrations.edit.profile_edit")%></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %> <i><%= t("views.devise.registrations.edit.blank") %></i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= I18n.t :symbols, count: @minimum_password_length %></em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("views.devise.registrations.edit.update") %>
      </div>
    <% end %>

    <h3><%= t("views.devise.registrations.edit.cancel") %></h3>

    <p><%= t("views.devise.registrations.edit.unhappy") %><%= button_to t("views.devise.registrations.edit.cancel"), registration_path(resource_name), data: { confirm: t("confirm.phrase") }, method: :delete, class: "btn btn-primary btn-danger" %></p>

    <%= link_to t("views.devise.registrations.edit.back"), :back %>
  </div>
</div>