<h1><%= t 'views.event_mailer.subscription.title' %></h1>
<hr/>
<%= t 'views.event_mailer.subscription.name' %> <strong><%= @name %></strong>
<p><%= t 'views.event_mailer.subscription.email' %> <strong><%= link_to @email, "mailto:#{@email}" %></strong></p>
<hr/>

<%= t 'views.event_mailer.subscription.event' %> <strong><%= link_to @event.title, @event%></strong>

<p><%= t 'views.event_mailer.subscription.datetime' %> <strong><%= l @event.datetime %></strong></p>

<p><%= t 'views.event_mailer.subscription.owner' %> <strong><%= @event.user.username %></strong></p>
