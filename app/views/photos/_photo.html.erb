<%# Паршал для вывода отдельной фотографии %>
<% image_title = "#{t("controllers.photos.added")} #{render partial: 'users/user', object: photo.user}"%>
<% if current_user_can_edit?(photo) %>
  <% image_title << link_to(fa_icon("trash"), event_photo_path(photo.event, photo), method: :delete, data: {confirm: "#{t("confirm.phrase")}"})%>
<% end %>
<div class="event-photo buffer-both">
  <%= link_to image_tag(photo.photo.thumb.url), photo.photo.url, data: {lightbox: "event photos", title: image_title} %>
</div>
